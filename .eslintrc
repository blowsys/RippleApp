{
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true,
            "modules": true
        }
    },
    "env": {
        "browser": true,
        "node": true
    },
    "rules": {
        "semi": [
            2,
            "always"
        ],
        "yoda": [
            2,
            "always"
        ],
        "indent": [
            "error",
            4
        ]
    }
}